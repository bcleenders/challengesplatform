%input{:type => :hidden, :id =>'page_identifier', :value => 'admin/usermanagement.index'}
%h2
  User management

%p
  %a{:class => "btn btn-primary", :title => "Create user", :href => new_admin_user_path}
    %i.icon-plus-sign
    Add user

%div#user-list
  %table.table
    %thead
      %tr
        %th.sort{:data_sort => "id"} ID
        %th.sort{:data_sort => "firstname"} Firstname
        %th.sort{:data_sort => "lastname"} Lastname
        %th.sort{:data_sort => "email"} Email
        %th.sort{:data_sort => "role"} Role
        %th.sort{:data_sort => "state"} State
        %th.sort{:data_sort => "last_login"} Last login
        %th Actions
    %tbody.list
      - @users.each do |user|
        = render :partial => 'admin/usermanagement/usermanagementtablerow', :object => user, :as => 'user'

%p
  %a{:class => "btn btn-primary", :title => "Create user", :href => new_admin_user_path}
    %i.icon-plus-sign
    Add user