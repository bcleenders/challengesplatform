%tr
  %td.id= user.id
  %td.title= link_to user.firstname, profile_user_path(user)
  %td.title= user.lastname
  %td.email= user.email
  %td.actions
    %a{:class => "btn", :onClick => "composeMessage('user', #{user.id})"}
      %i.icon-envelope
    %a{:class => "btn", :href => edit_admin_user_path(user) }
      %i.icon-pencil

    %i.icon-trash.color-pomegranate
