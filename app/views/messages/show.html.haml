= link_to "&laquo; back to Inbox".html_safe, messages_path
= image_tag Gravatar.new(@message.sender.email).image_url, :class => 'img-rounded pull-right'
%h2= @message.subject
%p
  %em
    = @message.created_at.strftime("%d-%m-%Y %H:%M:%S")
    &mdash; from 
    = link_to @message.sender.firstname + " " + @message.sender.lastname, profile_user_path(@message.sender)
= simple_format(h(@message.body))