%tr
  %td.id= user.id
  %td.title= link_to user.firstname, profile_user_path(user)
  %td.title= user.lastname
  %td.email= user.email
  %td.actions
    %a{:class => "btn btn-primary", :onClick => "composeMessage('user', #{user.id})"}
      %i.icon-envelope
    %i.icon-pencil

    %i.icon-trash.color-pomegranate
